<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LogInController">
   <children>
      <VBox alignment="CENTER" layoutX="260.0" layoutY="120.0" prefHeight="400.0" prefWidth="230.0" spacing="50.0">
         <children>
            <TextField fx:id="usernameTxtBx" alignment="CENTER" promptText="Username" />
            <TextField fx:id="passwordTxtBx" alignment="CENTER" promptText="Password" />
            <TextField fx:id="pinTxtBx" alignment="CENTER" prefHeight="25.0" prefWidth="17.0" promptText="PIN" />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLogin" prefHeight="25.0" prefWidth="100.0" text="Log In" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExit" prefHeight="25.0" prefWidth="99.0" text="Exit" textFill="#d31111">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="490.0" layoutY="270.0" prefHeight="250.0" prefWidth="250.0" spacing="20.0">
         <children>
            <Label fx:id="mainOfficeLabel" text="Main Office Time">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="officeTimeLabel" text="officeTime">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="officeDayLabel" text="officeDay">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="270.0" prefHeight="250.0" prefWidth="250.0" spacing="20.0">
         <children>
            <Label fx:id="localOfficeLabel" text="Local User Time">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="localTimeLabel" text="localTime">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="localDayLabel" text="localDay">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Label fx:id="companyTitleLabel" layoutX="147.0" layoutY="50.0" text="The Fernandez Group">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
